pipeline{
        agent any

        environment{
	    DOCKER_IMAGE_NAME = "catalogue"
        APP_NAME = "catalogue"
        }
        stages{
        stage('testing')
        {
        steps{
        sh 'echo "Helo"'
        }
        }
        stage ("checkout")
        {
        steps{
        //since we integrated with webhook, I ignored it
        sh 'echo "Success"'
        }
        }
        stage ("Building Docker Image")
        {
        steps{
	script{
        docker.build("${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}", "catalogue")
        }
	sh 'echo "success"'

        }}}}
